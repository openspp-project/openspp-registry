<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_change_request_create_farm_custom_form" model="ir.ui.view">
        <field name="name">view_change_request_create_farm_custom_form</field>
        <field name="model">spp.change.request</field>
        <field name="inherit_id" ref="spp_change_request.view_change_request_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='applicant_id']" position="attributes">
                <attribute name="required">request_type != 'spp.change.request.create.farm'</attribute>
            </xpath>
            <xpath expr="//label[@for='registrant_id']" position="attributes">
                <attribute
                    name="invisible"
                >request_type == 'spp.change.request.create.farm' and not registrant_id</attribute>
            </xpath>
            <xpath expr="//field[@name='registrant_id']" position="attributes">
                <attribute
                    name="invisible"
                >request_type == 'spp.change.request.create.farm' and not registrant_id</attribute>
            </xpath>
            <xpath expr="//label[@for='applicant_id']" position="attributes">
                <attribute
                    name="invisible"
                >request_type == 'spp.change.request.create.farm' and not registrant_id</attribute>
            </xpath>
            <xpath expr="//field[@name='applicant_id']" position="attributes">
                <attribute
                    name="invisible"
                >request_type == 'spp.change.request.create.farm' and not registrant_id</attribute>
            </xpath>
            <xpath expr="//group[1]" position="attributes">
                <attribute
                    name="invisible"
                >request_type == 'spp.change.request.create.farm' and not registrant_id</attribute>
            </xpath>
        </field>
    </record>
</odoo>
