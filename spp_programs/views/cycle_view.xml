<odoo>
    <record id="view_cycle_custom_spp_tree" model="ir.ui.view">
        <field name="name">view_cycle_custom_spp_tree</field>
        <field name="model">g2p.cycle</field>
        <field name="inherit_id" ref="g2p_programs.view_cycle_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='entitlements_count']" position="attributes">
                <attribute name="string">Cash Entitlements</attribute>
            </xpath>
            <xpath expr="//field[@name='entitlements_count']" position="after">
                <field name="inkind_entitlements_count" string="In-kind Entitlements" />
            </xpath>
        </field>
    </record>

    <record id="view_cycle_custom_spp_form" model="ir.ui.view">
        <field name="name">view_cycle_custom_spp_form</field>
        <field name="model">g2p.cycle</field>
        <field name="inherit_id" ref="g2p_programs.view_cycle_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='configuration']" position="inside">
                <field name="inkind_entitlements_count" invisible="1" />
                <field name="entitlements_count" invisible="1" />
            </xpath>
            <xpath expr="//button[@name='open_entitlements_form']" position="attributes">
                <attribute name="invisible">entitlements_count == 0</attribute>
                <attribute name="icon">fa-calculator</attribute>
            </xpath>
            <xpath expr="//button[@name='open_entitlements_form']" position="after">
                <button
                    type="object"
                    class="oe_stat_button"
                    icon="fa-calculator"
                    name="open_entitlements_form"
                    invisible="inkind_entitlements_count == 0"
                >
                    <div class="o_form_field o_stat_info">
                        <field name="inkind_entitlements_count" class="o_stat_value" />
                        <span class="o_stat_text">Entitlements</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//form" position="attributes">
                <attribute name="create">0</attribute>
            </xpath>
            <xpath expr="//button[@name='to_approve']" position="after">
                <button
                    type="object"
                    class="btn-success"
                    icon="fa-play"
                    title="To approve"
                    name="to_approve"
                    string="To Approve"
                    invisible="state != 'draft' or inkind_entitlements_count == 0"
                />
            </xpath>

            <xpath expr="//button[@name='copy_beneficiaries_from_program']" position="attributes">
                <attribute name="string">Copy New Beneficiaries from Program</attribute>
                <attribute name="title">Copy New Beneficiaries from Program</attribute>
                <attribute
                    name="groups"
                >g2p_registry_base.group_g2p_admin,g2p_programs.g2p_program_manager,spp_programs.write_program_cycle_entitlement</attribute>
            </xpath>
            <xpath expr="//button[@name='check_eligibility']" position="attributes">
                <attribute
                    name="groups"
                >g2p_registry_base.group_g2p_admin,g2p_programs.g2p_program_manager,spp_programs.write_program_cycle_entitlement</attribute>
            </xpath>
            <xpath expr="//button[@name='prepare_entitlement']" position="attributes">
                <attribute
                    name="groups"
                >g2p_registry_base.group_g2p_admin,g2p_programs.g2p_program_manager,spp_programs.create_program_cycle_entitlement</attribute>
            </xpath>
            <xpath expr="//button[@name='approve']" position="attributes">
                <attribute
                    name="groups"
                >g2p_registry_base.group_g2p_admin,g2p_programs.g2p_program_manager,g2p_programs.g2p_program_cycle_approver</attribute>
            </xpath>
            <xpath expr="//button[@name='to_approve']" position="attributes">
                <attribute
                    name="groups"
                >g2p_registry_base.group_g2p_admin,g2p_programs.g2p_program_manager,g2p_programs.g2p_program_cycle_approver</attribute>
            </xpath>
            <xpath expr="//button[@name='reset_draft']" position="attributes">
                <attribute
                    name="groups"
                >g2p_registry_base.group_g2p_admin,g2p_programs.g2p_program_manager,g2p_programs.g2p_program_cycle_approver</attribute>
            </xpath>
            <xpath expr="//button[@name='open_payments_form']" position="attributes">
                <attribute name="icon">fa-file-text-o</attribute>
            </xpath>
        </field>
    </record>

</odoo>
