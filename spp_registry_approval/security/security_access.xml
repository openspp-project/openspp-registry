<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="approve_registry" model="res.groups">
        <field name="name">Approve Registry</field>
        <field name="category_id" ref="spp_registry_base.registry_access_module" />
        <field
            name="implied_ids"
            eval="[
                Command.link(ref('spp_registry_base.read_registry'))
            ]"
        />
        <field
            name="users"
            eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"
        />
    </record>

